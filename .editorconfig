# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{tf,tfvars}]
indent_style = space
indent_size = 2
charset = utf-8

[*.{yaml,yml}]
indent_style = space
indent_size = 2
charset = utf-8

[*.{groovy}]
indent_style = space
indent_size = 2
charset = utf-8

[{Dockerfile}]
indent_style = space
indent_size = 2
charset = utf-8